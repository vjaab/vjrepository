import React from "react";
import "./style.css";

class dropdownCre extends React.Component {
  constructor() {
    super();
    this.state = {
      value: "coconut"
    };
    this.handleChange = this.handleChange.bind(this);
  }

  handleChange(event) {
    this.setState({ value: event.target.value });
  }
  render() {
    var Data = ["this", "example", "isnt", "funny"],
      MakeItem = function(X) {
        return <option>{X}</option>;
      };
    return (
      <div>
        <select onChange={this.handleChange}>{Data.map(MakeItem)}</select>
        {this.state.value}
      </div>
    );
  }
}
export default dropdownCre;
